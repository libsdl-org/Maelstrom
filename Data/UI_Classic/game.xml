<Panel cursor="false" delegate="GamePanel">
	<Elements>
		<!-- Status display -->
		<Line name="status_line">
			<Color r="0x9C" g="0x9C" b="0xFF"/>
			<Size w="640" h="1"/>
			<Anchor anchorFrom="BOTTOM" anchorTo="BOTTOM" y="-13"/>
		</Line>

		<Label name="score_label" template="SmallBlue" text="Score:">
			<Anchor anchorFrom="TOPLEFT" anchorTo="TOPLEFT" anchor="status_line" x="3" y="1"/>
		</Label>
		<Label name="score" template="SmallWhite">
			<Anchor anchorFrom="LEFT" anchorTo="RIGHT" anchor="score_label" x="4"/>
		</Label>

		<Label name="shield_label" template="SmallBlue" text="Shield:">
			<Anchor anchorFrom="LEFT" anchorTo="RIGHT" anchor="score_label" x="70"/>
		</Label>
		<Rectangle>
			<Color r="0xFF" g="0xFF" b="0xFF"/>
			<Size w="55" h="8"/>
			<Anchor anchorFrom="LEFT" anchorTo="RIGHT" anchor="shield_label" x="4" y="1"/>
		</Rectangle>
		<Rectangle name="shield" fill="true">
			<Color r="0x75" g="0x75" b="0xFF"/>
			<Size w="" h="6"/>
			<Anchor anchorFrom="LEFT" anchorTo="RIGHT" anchor="shield_label" x="5" y="1"/>
		</Rectangle>

		<Label name="wave_label" template="SmallBlue" text="Wave:">
			<Anchor anchorFrom="LEFT" anchorTo="RIGHT" anchor="shield_label" x="70"/>
		</Label>
		<Label name="wave" template="SmallWhite">
			<Anchor anchorFrom="LEFT" anchorTo="RIGHT" anchor="wave_label" x="4"/>
		</Label>

		<Label name="lives_label" template="SmallBlue" text="Lives:">
			<Anchor anchorFrom="LEFT" anchorTo="RIGHT" anchor="wave_label" x="30"/>
		</Label>
		<Label name="lives" template="SmallWhite">
			<Anchor anchorFrom="LEFT" anchorTo="RIGHT" anchor="lives_label" x="4"/>
		</Label>

		<Label name="bonus_label" template="SmallBlue" text="Bonus:">
			<Anchor anchorFrom="LEFT" anchorTo="RIGHT" anchor="lives_label" x="30"/>
		</Label>
		<Label name="bonus" template="SmallWhite">
			<Anchor anchorFrom="LEFT" anchorTo="RIGHT" anchor="bonus_label" x="4"/>
		</Label>

		<Icon name="multiplier2" id="130">
			<Anchor anchorFrom="TOPLEFT" anchorTo="BOTTOMLEFT" anchor="status_line" x="424" y="3"/>
		</Icon>
		<Icon name="multiplier3" id="131">
			<Anchor anchorFrom="TOPLEFT" anchorTo="TOPLEFT" anchor="multiplier2"/>
		</Icon>
		<Icon name="multiplier4" id="132">
			<Anchor anchorFrom="TOPLEFT" anchorTo="TOPLEFT" anchor="multiplier2"/>
		</Icon>
		<Icon name="multiplier5" id="134">
			<Anchor anchorFrom="TOPLEFT" anchorTo="TOPLEFT" anchor="multiplier2"/>
		</Icon>

		<Icon name="autofire" id="128">
			<Anchor anchorFrom="TOPLEFT" anchorTo="BOTTOMLEFT" anchor="status_line" x="438" y="3"/>
		</Icon>
		<Icon name="airbrakes" id="129">
			<Anchor anchorFrom="TOPLEFT" anchorTo="BOTTOMLEFT" anchor="status_line" x="454" y="3"/>
		</Icon>
		<Icon name="lucky" id="133">
			<Anchor anchorFrom="TOPLEFT" anchorTo="BOTTOMLEFT" anchor="status_line" x="470" y="3"/>
		</Icon>
		<Icon name="triplefire" id="135">
			<Anchor anchorFrom="TOPLEFT" anchorTo="BOTTOMLEFT" anchor="status_line" x="486" y="3"/>
		</Icon>
		<Icon name="longfire" id="136">
			<Anchor anchorFrom="TOPLEFT" anchorTo="BOTTOMLEFT" anchor="status_line" x="502" y="3"/>
		</Icon>

		<!-- Multiplayer elements -->
		<Label name="multiplayer_caption" template="SmallBlue">
			<Anchor anchorFrom="TOPLEFT" anchorTo="TOPLEFT" x="32" y="1"/>
		</Label>
		<Rectangle name="multiplayer_color" fill="true">
			<Size w="4" h="8"/>
			<Anchor anchorFrom="TOPLEFT" anchorTo="TOPLEFT" anchor="status_line" x="518" y="4"/>
		</Label>
		<Label name="frags_label" template="SmallBlue" text="Frags:">
			<Anchor anchorFrom="TOPLEFT" anchorTo="TOPLEFT" anchor="status_line" x="530" y="1"/>
		</Label>
		<Label name="frags" template="SmallWhite">
			<Anchor anchorFrom="LEFT" anchorTo="RIGHT" anchor="frags_label" x="4"/>
		</Label>

		<!-- Touch controls -->
		<Button condition="TOUCH" name="abort" action="CONTROL_ABORT" image="abort">
			<Anchor anchorFrom="TOPRIGHT" anchorTo="TOPRIGHT" x="-6" y="4"/>
		</Button>
		<Button condition="TOUCH" name="pause" action="CONTROL_PAUSE" image="pause">
			<Anchor anchorFrom="RIGHT" anchorTo="LEFT" anchor="abort" x="-12"/>
		</Button>
		<Thumbstick condition="TOUCH" name="fire" image="fire">
			<Anchor anchorFrom="BOTTOMRIGHT" anchorTo="BOTTOMRIGHT" x="-8" y="-16"/>
			<Action action_enter="CONTROL_DOWN_FIRE" action_leave="CONTROL_UP_FIRE"/>
		</Thumbstick>
		<Thumbstick condition="TOUCH" name="thrust" image="thrust">
			<Anchor anchorFrom="RIGHT" anchorTo="LEFT" anchor="fire" x="-8"/>
			<Action action_enter="CONTROL_DOWN_THRUST" action_leave="CONTROL_UP_THRUST"/>
		</Thumbstick>

		<Thumbstick condition="TOUCH" name="rotate_left" image="rotate_left">
			<Anchor anchorFrom="BOTTOMLEFT" anchorTo="BOTTOMLEFT" x="0" x="8" y="-16"/>
			<Action action_enter="CONTROL_DOWN_LEFT" action_leave="CONTROL_UP_LEFT"/>
		</Thumbstick>
		<Thumbstick condition="TOUCH" name="rotate_right" image="rotate_right">
			<Anchor anchorFrom="LEFT" anchorTo="RIGHT" anchor="rotate_left" x="8"/>
			<Action action_enter="CONTROL_DOWN_RIGHT" action_leave="CONTROL_UP_RIGHT"/>
		</Thumbstick>
		<Thumbstick condition="TOUCH" name="shield" image="shield">
			<Anchor anchorFrom="BOTTOM" anchorTo="TOP" anchor="rotate_left" x="32" y="-4"/>
			<Action action_enter="CONTROL_DOWN_SHIELD" action_leave="CONTROL_UP_SHIELD"/>
		</Thumbstick>
		<!--
		<Thumbstick condition="TOUCH" image="thumbstick" followTouch="true" sensitiveRadius="128">
			<Anchor anchorFrom="BOTTOMLEFT" anchorTo="BOTTOMLEFT" x="0" x="8" y="-16"/>
			<Action angle="0" arc="45" active_radius="8" action_enter="CONTROL_DOWN_THRUST" action_leave="CONTROL_UP_THRUST"/>
			<Action angle="180" arc="45" active_radius="4" action_enter="CONTROL_DOWN_SHIELD" action_leave="CONTROL_UP_SHIELD"/>
			<Action angle="90" arc="45" active_radius="0" action_enter="CONTROL_DOWN_RIGHT" action_leave="CONTROL_UP_RIGHT"/>
			<Action angle="270" arc="45" active_radius="0" action_enter="CONTROL_DOWN_LEFT" action_leave="CONTROL_UP_LEFT"/>
		</Thumbstick>
		<Thumbstick condition="TOUCH" image="fire" followTouch="true" sensitiveRadius="128">
			<Anchor anchorFrom="BOTTOMRIGHT" anchorTo="BOTTOMRIGHT" x="-8" y="-16"/>
			<Action action_enter="CONTROL_DOWN_FIRE" action_leave="CONTROL_UP_FIRE"/>
		</Thumbstick>
		-->
	</Elements>
</Panel>
